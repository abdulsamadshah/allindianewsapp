<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="355dp"
    android:background="@color/black"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#353333"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="#353333"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:layout_gravity="center"
                    android:backgroundTint="#353333"
                    app:cardCornerRadius="4dp">

                    <ImageView
                        android:id="@+id/newsimage"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/statuss" />


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <TextView
                android:id="@+id/newstitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:fontFamily="@font/amaranth"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Title"
                android:textColor="@color/white"
                android:textSize="17sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#353333"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="185dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:background="#353333"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="165dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="-2dp"
                        android:background="#353333"
                        android:orientation="horizontal">


                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/userimage"
                            android:layout_width="30dp"
                            android:layout_height="37dp"
                            android:src="@drawable/avatar"
                            app:civ_border_color="#DEDCE1"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:id="@+id/username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:padding="2dp"
                            android:paddingLeft="5dp"
                            android:text="Aaj Tak"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="125dp"
                    android:layout_height="39dp"
                    android:layout_marginLeft="230dp"
                    android:layout_marginTop="-35dp"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/imgwhatsapp"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="7dp"
                        android:src="@drawable/ic_baseline_comment_24" />

                    <TextView
                        android:id="@+id/views"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="-27dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:text="25"
                        android:textColor="@color/white" />

                    <ImageView
                        android:id="@+id/imgshareview"
                        android:layout_width="35sp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="-25dp"
                        android:src="@drawable/whatsappdash" />

                    <TextView
                        android:id="@+id/viewss"
                        android:layout_width="30dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="92dp"
                        android:layout_marginTop="-27dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:text="25"
                        android:textColor="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>